<BorderPane xmlns:fx="http://javafx.com/fxml/1 " xmlns="http://javafx.com/javafx/8.0.171"
            fx:controller="com.example.javafxdatabasemaven.HelloController">
    <top>
        <HBox>
            <children>
                <Label text="Mot cle"/>
                <TextField fx:id="fieldMC" alignment="TOP_CENTER"/>
                <Button fx:id="Research" mnemonicParsing="false" onAction="#Rechercher" text="Rechercher"></Button>

            </children>
        </HBox>
    </top>
    <center>
        <TableView fx:id="productsTable" prefHeight="200" prefWidth="200" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="IDcolumn" prefWidth="75" text="ID"/>
                <TableColumn fx:id="Namecolumn" prefWidth="75" text="Name"/>
                <TableColumn fx:id="Prixcolumn" prefWidth="75" text="Prix"/>
                <TableColumn fx:id="Quantitecolumn" prefWidth="75" text="Quantite"/>

            </columns>
        </TableView>
    </center>

</BorderPane>
